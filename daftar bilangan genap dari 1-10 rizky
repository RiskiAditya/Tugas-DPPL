<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bilangan Genap</title>
</head>
<body>

    <h1>Bilangan Genap dari 1 hingga 10</h1>
    <ul id="evenNumbersList"></ul>

    <script>
        // JavaScript untuk menampilkan bilangan genap dari 1 hingga 10
        const list = document.getElementById('evenNumbersList');

        for (let number = 1; number <= 10; number++) {
            if (number % 2 === 0) {  // Mengecek apakah bilangan genap
                const listItem = document.createElement('li'); // Membuat elemen list <li>
                listItem.textContent = number; // Menetapkan teks elemen list
                list.appendChild(listItem); // Menambahkan elemen list ke dalam <ul>
            }
        }
    </script>

</body>
</html>
